<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".book_flight_main">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="120dp"
                android:layout_height="26dp"
                android:text="Book Flight"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif" />


            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="24dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="34dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:text="Customer Id"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="78dp"
                    android:text="Customer Name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="41dp"
                android:orientation="horizontal"
                android:paddingLeft="13dp">

                <EditText
                    android:id="@+id/txtCustomerId"
                    android:layout_width="190dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/border"
                    android:hint="Customer Id"
                    android:inputType="none"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtCustomerName"
                    android:layout_width="190dp"
                    android:layout_height="29dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/border"
                    android:hint="Customer Name"
                    android:inputType="none"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="24dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="23dp"
                    android:text="Flight Id"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="78dp"
                    android:text="Flight Name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="41dp"
                android:orientation="horizontal"
                android:paddingLeft="13dp">

                <EditText
                    android:id="@+id/txtFlightId"
                    android:layout_width="190dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/border"
                    android:hint="Flight Id"
                    android:inputType="none"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtFlightName"
                    android:layout_width="190dp"
                    android:layout_height="29dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/border"
                    android:hint="Flight Name"
                    android:inputType="none"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="24dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:text="Source"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="78dp"
                    android:text="Destination"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="41dp"
                android:orientation="horizontal"
                android:paddingLeft="13dp">

                <EditText
                    android:id="@+id/txtSource"
                    android:layout_width="190dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/border"
                    android:hint="Source"
                    android:inputType="none"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtDestination"
                    android:layout_width="190dp"
                    android:layout_height="29dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/border"
                    android:hint="Destination"
                    android:inputType="none"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="24dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="22dp"
                    android:text="Arrival"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="117dp"
                    android:text="Departure"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="41dp"
                android:orientation="horizontal"
                android:paddingLeft="13dp">

                <EditText
                    android:id="@+id/txtArrival"
                    android:layout_width="100dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/border"
                    android:hint="Arrival"
                    android:inputType="none"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtDeparture"
                    android:layout_width="100dp"
                    android:layout_height="29dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/border"
                    android:hint="Departure"
                    android:inputType="none"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />
            </LinearLayout>





            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="24dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:text="Seats"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:text="Price"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif" />
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="20dp"
                    android:text="Take off date"
                    android:layout_marginLeft="29dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="41dp"
                android:orientation="horizontal"
                android:paddingLeft="13dp">

                <EditText
                    android:id="@+id/txtSeats"
                    android:layout_width="100dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/border"
                    android:hint="Seats"
                    android:inputType="none"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtPrice"
                    android:layout_width="100dp"
                    android:layout_height="29dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/border"
                    android:hint="Price"
                    android:inputType="none"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtflighttakeoff"
                    android:layout_width="100dp"
                    android:layout_height="29dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/border"
                    android:hint="Take off date"
                    android:inputType="none"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="24dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:text="Ticket Id "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="13dp">

                <EditText
                    android:id="@+id/txtTicketId"
                    android:layout_width="191dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/border"
                    android:hint="Ticket Id"
                    android:inputType="none"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="24dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:text="Address"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="84dp"
                    android:text="Gender"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="41dp"
                android:orientation="horizontal"
                android:paddingLeft="13dp">

                <EditText
                    android:id="@+id/txtAddress"
                    android:layout_width="200dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/border"
                    android:hint="Address"
                    android:inputType="none"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="150dp"
                    android:layout_height="29dp"
                    android:layout_marginLeft="6dp"
                    android:entries="@array/gender"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/spinner_background"
                    android:spinnerMode="dropdown" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="24dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:text="Class"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:text="Reserve Seat"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="41dp"
                android:orientation="horizontal"
                android:paddingLeft="13dp">

                <Spinner
                    android:id="@+id/spinnerClass"
                    android:layout_width="170dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/spinner_background"
                    android:entries="@array/flight_class"
                    android:spinnerMode="dropdown" />

                <Spinner
                    android:id="@+id/spinnerReserveSeat"
                    android:layout_width="170dp"
                    android:layout_height="29dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/spinner_background"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

]
            <Button
                android:id="@+id/btnBookflight"
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_marginLeft="90dp"
                android:background="@drawable/border"
                android:layout_marginTop="20dp"
                android:text="Book Flight"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>